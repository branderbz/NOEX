<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exercise_name_text_view"
        android:gravity="center"
        android:text="Exercise Name"
        android:textSize="40dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rep_counter_title_text_view"
        android:text="Reps:"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rep_counter_text_view"
        android:gravity="center"
        android:text="reps_done"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/min_angle_title_text_view"
        android:gravity="center"
        android:text="Min angle:"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/min_angle_text_view"
        android:gravity="center"
        android:text="min_angle"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/actual_degree_title_text_view"
        android:gravity="center"
        android:text="Actual Degree"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/actual_degree_text_view"
        android:gravity="center"
        android:text="actual_degree"
        android:textSize="40dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/max_degree_title_text_view"
        android:gravity="center"
        android:text="Max Degree"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/max_degree_text_view"
        android:gravity="center"
        android:text="max_degree"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_title_text_view"
        android:gravity="center"
        android:text="Set:"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_text_view"
        android:gravity="center"
        android:text="set"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/elapsed_time_title_text_view"
        android:gravity="center"
        android:text="Elapsed Time"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/elapsed_time_text_view"
        android:gravity="center"
        android:text="elapsed_time"
        android:textSize="20dp"/>



</LinearLayout>